<div class="form-group">
  <%= f.label :first_name, required: true %>
  <%= f.text_field :first_name, required: true, class: "form-control" %>
</div>

<div class="form-group">
  <%= f.label :last_name, required: true %>
  <%= f.text_field :last_name, required: true, class: "form-control" %>
</div>

<div class="form-group">
  <%= f.label :email, required: true %>
  <%= f.text_field :email, required: true, class: "form-control" %>
</div>

<div class="form-group">
  <%= f.label :group %>
  <%= collection_select(:contact, :group_ids, current_user.groups, :id, :name, {prompt: "Choose a group"}, {class: "form-control", :multiple => true}) %>
</div>
