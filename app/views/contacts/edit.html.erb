<% @title = "Edit contact" %>

  <%= form_for @contact do |f| %>
    <% if @contact.errors.any? %>
      <div class="alert alert-warning alert-dismissible" role="alert">
        <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>

        <% @contact.errors.full_messages.each do |msg| %>
          <%= msg %>
        <% end %>
        </div>
    <% end %>
  <div class="panel panel-default">
    <div class="panel-heading">
       <div class="panel-title"><%= @title %></div>
    </div>
    <div class="panel-body">
      <%= render "form", f: f %>
    </div>

    <div class="panel-footer">
      <%= f.submit "Update contact details", class: "btn btn-primary" %>
      <%= link_to "cancel and go back", contacts_path, class: "btn btn-link" %>
    </div>
    <div class="panel-footer">
    <%= link_to "Delete this contact", contact_path, method: :delete, class: "btn btn-danger", data: { confirm: 'Are you sure you want to delete this contact? There is no undo.' } %>
    </div>
  <% end %>
  </div>
