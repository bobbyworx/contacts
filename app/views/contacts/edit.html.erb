<% @title = "Edit contact" %>

  <%= form_for @contact do |f| %>
  <div class="panel panel-default">
    <div class="panel-heading">
       <div class="panel-title"><%= @title %></div>
    </div>
    <div class="panel-body">
      <%= render "form", f: f %>
    </div>

    <div class="panel-footer">
      <%= f.submit "Update contact details", class: "btn btn-primary" %>
      <%= link_to "cancel and go back", contacts_path, class: "btn btn-link" %>
    </div>
    <div class="panel-footer">
    <%= link_to "Delete this contact", contact_path, method: :delete, class: "btn btn-danger", data: { confirm: 'Are you sure you want to delete this contact? There is no undo.' } %>
    </div>
  <% end %>
  </div>
