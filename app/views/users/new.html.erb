<body id="login-page">
  <div class="login">
    <div class="login-screen">
      <div class="app-title">
        <h1>Sign Up</h1>
      </div>

      <div class="login-form">
      <%= form_for @user do |f| %>
        <% if @user.errors.any? %>
        <div class="alert alert-warning" role="alert">
          <% @user.errors.full_messages.each do |msg| %>
            <%= msg %>
          <% end %>
        </div>
      <% end %>

        <div class="control-group">
          <%= f.text_field :email, :placeholder => 'E-mail address', class: 'login-field-icon fui-user', autofocus: true %>
        </div>

        <div class="control-group">
          <%= f.password_field :password, :placeholder => 'Password', class: 'login-field-icon fui-lock' %>
        </div>

        <div class="control-group">
          <%= f.password_field :password_confirmation, :placeholder => 'Password confirmation', class: 'login-field-icon fui-lock' %>
        </div>

        <div class="submit">
          <%= f.submit 'Sign Up', class: 'btn-login btn-primary btn-large btn-block' %>
        </div>
      <% end %>
    </div>
  </div>
</div>
</body>
