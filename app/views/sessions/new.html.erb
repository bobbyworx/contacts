<body id="login-page">
  <div class="login">
    <div class="login-screen">
      <div class="app-title">
        <h1>Login</h1>
      </div>


      <div class="login-form">
        <%= form_tag session_path do %>
      <div class="control-group">
          <%= label_tag :email, '' %>
          <%= text_field_tag :email, nil, :placeholder => 'E-mail address', class: 'login-field-icon fui-user', autofocus: true %>
      </div>

      <div class="control-group">
          <%= label_tag :password, '' %>
          <%= password_field_tag :password, nil, :placeholder => 'Password', class: 'login-field-icon fui-lock' %>
      </div>

        <div class='submit'>
          <%= button_tag 'LOGIN', class: 'btn-login btn-primary btn-large btn-block' %>
        </div><br>
        <%= link_to 'Sign up', new_user_path %>
        <% end %>
      </div>
    </div>
  </div>
</body>



